{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Task",
			"dependsOn": [
				"Terminate All Tasks",
				"g++ build all",
				"Run output"
			],
			"dependsOrder": "sequence"
		},
		{
			"label": "Run output",
			"command": "output.exe",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}/",
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": [],
		},
		{
			"label": "g++ build all",
			"command": "g++",
			"args": [
				"*.cpp",
				"-o",
				"output.exe",
				"-fopenmp",
				"-std=c++20",
				"-fdiagnostics-color=always",
			],
			"options": {
				"cwd": "${workspaceFolder}/",
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\g++.exe"
		},
		{
			"label": "Terminate All Tasks",
			"command": "${command:workbench.action.terminal.killAll}",
			"type": "shell",
			"problemMatcher": [],
		}
	]
}